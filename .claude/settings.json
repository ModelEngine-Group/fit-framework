{
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(tree:*)",
      "WebSearch",
      "WebFetch",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(mvn:*)",
      "Bash(npm:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "Bash(curl:*)",
      "Bash(pkill:*)",
      "Bash(chmod:*)",
      "Bash(xargs:*)",
      "Bash(ls:*)",
      "Bash(pwd)",
      "Bash(echo:*)",
      "Bash(mkdir:*)",
      "Bash(cd:*)",
      "Bash(sleep:*)",
      "Bash(tail:*)",
      "Bash(head:*)",
      "Bash(build/bin/fit:*)",
      "Bash(rm -rf build)",
      "Bash(rm -rf dynamic-plugins)",
      "Bash(rm -rf target)",
      "Bash(rm -rf node_modules)",
      "Bash(rm -rf dist)",
      "Bash(rm -rf .tmp)",
      "Bash(rm -rf coverage)",
      "Bash(rm -rf .pytest_cache)",
      "Bash(rm -rf __pycache__)",
      "Read(//tmp/claude/tasks/**)",
      "Read(//tmp/claude/**)"
    ],
    "deny": [
      "Bash(sudo rm:*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf .)",
      "Bash(rm -rf ..)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(./secrets/**)",
      "Read(./**/*.key)",
      "Read(./**/*.pem)",
      "Read(./**/credentials.*)"
    ],
    "ask": [
      "Bash(git push origin main)",
      "Bash(git push origin master)",
      "Bash(git push --force:*)",
      "Bash(git rebase:*)",
      "Bash(npm publish:*)",
      "Bash(mvn deploy:*)"
    ]
  }
}
