<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- 模拟你给的格式 -->
            <pattern>
                [%d{yyyy-MM-dd HH:mm:ss.SSS}] [%-5level] [%thread] [%logger] %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- 根日志级别和输出目标 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>